{
  "name": "@react-three/offscreen",
  "version": "0.0.8",
  "description": "Worker offscreen canvas for react three fiber",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "sideEffects": false,
  "scripts": {
